<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#F50057" />
            <stroke
                android:width="1dp"
                android:color="#F50057" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#E53935"
                android:endColor="#E53935"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#E53935" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>